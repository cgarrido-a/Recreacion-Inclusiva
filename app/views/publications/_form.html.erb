<%= form_with(model: publication, local: true) do |form| %>
  <% if publication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

      <ul>
      <% publication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container w-50">
  
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control mb-4" %>
  </div>

  <div class="field">
    <%= form.label :region %>
    <%= form.select(:region, [],{},{ :class => 'region-selector' }) %>
  </div>

  <div class="field">
    <%= form.label :catergory, class: "mt-4" %>
    <%= form.select(:category, ["Hoteleria", "Gastronomia", "Entretencion"],{},class: "form-control mb-4"  )%>
  </div>
  

  <div class="field">
    <%= form.label :description, class: "mt-4" %>
    <%= form.text_area :description, class: "form-control mb-4"  %>
  </div>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, class: " mb-4"  %>
  </div>


  <div class="field">
    <%= form.label :map %>
    <%= form.text_field :map, class: "form-control mb-4"  %>
  </div>

  <div class="actions">
    <%= form.submit :enviar, class: "btn btn-secondary" %>
  </div>
<% end %>

</div>
  